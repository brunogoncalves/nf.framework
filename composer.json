{
    "name"       : "brunogoncalves/nf.framework",
    "description": "Framework aplicacoes NetForce.",
    "keywords"   : ["netforce", "app", "framework", "laravel", "lumen"],
    "license"    : "GPL-3.0",

    "require": {
        "php"                    : ">=5.6.4",
        "laravel/lumen-framework": "5.4.*",
        "vlucas/phpdotenv"       : "~2.2",
        "jenssegers/mongodb"     : "3.2.*"
    },

    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit" : "~5.0",
        "mockery/mockery" : "~0.9"
    },

    "autoload": {
        "psr-4": {
            "NetForce\\Framework\\": "src/"
        }
    },

    "minimum-stability": "dev",
    "prefer-stable"    : true
}
